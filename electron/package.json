{
  "name": "auracoach-electron",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.auracoach.desktop",
    "productName": "AuraCoach",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "../frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend-dist"
      }
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "protocols": {
        "name": "auracoach",
        "schemes": ["auracoach"]
      }
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}